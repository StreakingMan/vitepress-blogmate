{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "jsx": "preserve",
        "lib": ["esnext", "dom", "dom.iterable"]
    },
    "include": ["./shim.d.ts"],
    "exclude": ["**/node_modules/**", "**/dist/**"]
}
